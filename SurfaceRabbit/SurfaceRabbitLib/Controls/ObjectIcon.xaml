<UserControl x:Class="SurfaceRabbit.Controls.ObjectIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="100" Width="100">
  
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="bvConverter" />
  </UserControl.Resources>
  
  <Grid>
    <Rectangle RadiusX="5" RadiusY="5" Margin="5,5,5,5" Fill="Green" Visibility="{Binding Path=OnSurface, Converter={StaticResource bvConverter}}"/>
    <Image Source="/JuanTestApp;component/Resources/greenTube.png" Margin="10,10" MouseDown="Image_MouseDown"/>
  </Grid>
</UserControl>
