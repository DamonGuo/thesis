      							<Rectangle.Fill>
      								<LinearGradientBrush EndPoint="-0.234,0.37" StartPoint="-0.981,-0.138">
      									<GradientStop Color="#00FFFFFF" Offset="0"/>
      									<GradientStop Color="#33FFFFFF" Offset="0.52"/>
      									<GradientStop Color="#00FFFFFF" Offset="1"/>
      								</LinearGradientBrush>
      							</Rectangle.Fill>
      						</Rectangle>
      					</Grid>
