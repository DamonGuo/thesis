    <Rectangle x:Name="rShadow" Height="210" Width="120" RadiusX="5" RadiusY="5"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               Stroke="Blue" StrokeThickness="5" Fill="LightGray"/>
