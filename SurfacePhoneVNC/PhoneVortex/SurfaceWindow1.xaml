<s:SurfaceWindow x:Class="PhoneVortex.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="PhoneVortex"
    >
  <s:SurfaceWindow.Resources>
    <ImageBrush x:Key="WindowBackground" Stretch="None" Opacity="0.6" ImageSource="pack://application:,,,/Resources/WindowBackground.jpg"/>
  </s:SurfaceWindow.Resources>

  <Grid Background="{StaticResource WindowBackground}" >
    <s:TagVisualizer Name="tVisualizer" Background="Transparent" Height="Auto" Width="Auto" 
                     VisualizationAdded="tVisualizer_VisualizationAdded"
                     VisualizationRemoved="tVisualizer_VisualizationRemoved"/>
  </Grid>
</s:SurfaceWindow>
